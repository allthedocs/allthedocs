{
    "name": "allthedocs",
    "output": "dist/docs/",
    "ignore": [
        "dist/",
        "node_modules/",
        "resources/"
    ],
    "navigation": {
        "Home": "index.md",
        "User Guide": "docs/user/index.md",
        "Development": "docs/dev/index.md"
    },
    "paths": {
        "userDir": "docs/user/",
        "devDir": "docs/dev/"
    },
    "code": [
        {
            "extension": "js",
            "language": "javascript",
            "comments": [
                {
                    "type": "single",
                    "start": "^//[ ]{0,1}"
                }
            ]
        },
        {
            "extension": "scss",
            "language": "scss",
            "comments": [
                {
                    "type": "single",
                    "start": "^//[ ]{0,1}"
                }
            ]
        },
        {
            "extension": "php",
            "language": "php",
            "comments": [
                {
                    "type": "single",
                    "start": "^//[ ]{0,1}"
                },
                {
                    "type": "single",
                    "start": "^#[ ]{0,1}"
                }
            ]
        }
    ]
}